<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_ac"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:theme="@style/Theme.NatsusHome"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:clipToOutline="false"
    tools:context=".LauncherApp">
    <View
        android:importantForAccessibility="no"
        android:background="@drawable/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:importantForAccessibility="no"
        android:padding="0dp"
        android:layout_margin="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/img_view_app_wallpaper"
        android:contentDescription="@string/app_wallpaper"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/bg"
        android:id="@+id/background_dim"
        android:clickable="false"
        android:longClickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="top"
        android:id="@+id/top_bar_cont"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:importantForAccessibility="yes"
            android:contentDescription="@string/hold_to_change_wallaper"
            android:id="@+id/long_click_view_top"
            android:background="@color/bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:id="@+id/status_bar_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rv_cont"
            android:clickable="true"
            android:importantForAccessibility="no"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:paddingStart="16dp"
                android:scrollbars="vertical"
                android:scrollbarSize="2dp"
                android:fadeScrollbars="true"
                android:scrollbarTrackVertical="@drawable/fully_trans"
                android:scrollbarThumbVertical="@drawable/scrollbar"
                android:paddingEnd="16dp"
                android:id="@+id/appIconRecyclerView"
                app:flexDirection="row"
                app:justifyContent="center"
                android:layout_centerVertical="true"
                app:flexWrap="wrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>